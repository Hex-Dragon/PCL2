<local:MyPageRight
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:PCL" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    mc:Ignorable="d" x:Class="PageSetupSystem"
    PanScroll="{Binding ElementName=PanBack}">
    <local:MyScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" x:Name="PanBack">
        <StackPanel x:Name="PanMain" Margin="25,10">

            <local:MyCard Margin="0,15" Title="{DynamicResource LangPageSetupSystemDownload}">
                <StackPanel Margin="25,37,25,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Name" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="28" />
                            <RowDefinition Height="7" />
                            <RowDefinition Height="28" />
                            <RowDefinition Height="7" />
                            <RowDefinition Height="28" />
                            <RowDefinition Height="7" />
                            <RowDefinition Height="27" />
                            <RowDefinition Height="27" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Text="{DynamicResource LangPageSetupSystemDownloadVersionListSource}" Margin="0,0,25,0" />
                        <local:MyComboBox x:Name="ComboDownloadVersion" Grid.ColumnSpan="2" Tag="ToolDownloadVersion" Grid.Column="1">
                            <local:MyComboBoxItem Content="{DynamicResource LangPageSetupSystemDownloadVersionListSourceA}" IsSelected="True" />
                            <local:MyComboBoxItem Content="{DynamicResource LangPageSetupSystemDownloadVersionListSourceB}" />
                            <local:MyComboBoxItem Content="{DynamicResource LangPageSetupSystemDownloadVersionListSourceC}" />
                        </local:MyComboBox>
                        <TextBlock Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Left" Text="{DynamicResource LangPageSetupSystemDownloadModListSource}" Margin="0,0,25,0" />
                        <local:MyComboBox x:Name="ComboDownloadMod" Grid.Row="2" Grid.ColumnSpan="2" Tag="ToolDownloadMod" Grid.Column="1">
                            <local:MyComboBoxItem Content="{DynamicResource LangPageSetupSystemDownloadModListSourceA}" />
                            <local:MyComboBoxItem Content="{DynamicResource LangPageSetupSystemDownloadModListSourceB}" />
                            <local:MyComboBoxItem Content="{DynamicResource LangPageSetupSystemDownloadModListSourceC}" IsSelected="True" />
                        </local:MyComboBox>
                        <TextBlock Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Left" Text="{DynamicResource LangPageSetupSystemDownloadModFileName}" Margin="0,0,25,0" />
                        <local:MyComboBox Grid.Row="4" x:Name="ComboDownloadTranslate" Grid.ColumnSpan="2" Tag="ToolDownloadTranslate" Grid.Column="1" 
                                          ToolTip="{DynamicResource LangPageSetupSystemDownloadModFileNameToolTip}">
                            <local:MyComboBoxItem Content="{DynamicResource LangPageSetupSystemDownloadModFileNameA}" IsSelected="True" />
                            <local:MyComboBoxItem Content="{DynamicResource LangPageSetupSystemDownloadModFileNameB}" />
                            <local:MyComboBoxItem Content="{DynamicResource LangPageSetupSystemDownloadModFileNameC}" />
                            <local:MyComboBoxItem Content="{DynamicResource LangPageSetupSystemDownloadModFileNameD}" />
                        </local:MyComboBox>
                        <TextBlock Grid.Row="6" VerticalAlignment="Center" HorizontalAlignment="Left" Text="{DynamicResource LangPageSetupSystemDownloadThread}" Margin="0,0,25,0" />
                        <local:MySlider x:Name="SliderDownloadThread" Grid.Row="6" Tag="ToolDownloadThread" MaxValue="255" Value="63" Grid.Column="1"
                                        ToolTip="{DynamicResource LangPageSetupSystemDownloadThreadToolTip}" />
                        <TextBlock VerticalAlignment="Center" Grid.Row="7" HorizontalAlignment="Left" Text="{DynamicResource LangPageSetupSystemDownloadSpeedLimit}" Margin="0,0,25,0" />
                        <local:MySlider x:Name="SliderDownloadSpeed" Grid.Row="7" Tag="ToolDownloadSpeed" MaxValue="42" Value="42" Grid.Column="1"
                                        ToolTip="{DynamicResource LangPageSetupSystemDownloadSpeedLimitToolTip}" />
                        <TextBlock VerticalAlignment="Top" Grid.Row="9" HorizontalAlignment="Left" Text="{DynamicResource LangPageSetupSystemDownloadTargetFolder}" Margin="0,5,25,5" />
                        <TextBlock Margin="0,5" HorizontalAlignment="Left" Text="{DynamicResource LangPageSetupSystemDownloadTargetFolderToolTip}" Grid.Row="9" Grid.Column="1" VerticalAlignment="Center" Opacity="0.5" />
                        <local:MyCheckBox Margin="0,5,0,4" Text="{DynamicResource LangPageSetupSystemDownloadKeepModpackArchive}" Grid.Row="10" Height="22" Grid.ColumnSpan="2"
                                          x:Name="CheckDownloadKeepModpack" Tag="ToolDownloadKeepModpack" 
                                          ToolTip="{DynamicResource LangPageSetupSystemDownloadKeepModpackArchiveToolTip}" />
                        <local:MyCheckBox Margin="0,2,0,4" Text="{DynamicResource LangPageSetupSystemDownloadSimplifyModLoaderDisplay}" Grid.Row="11" Height="22" Grid.ColumnSpan="2"
                                          x:Name="CheckDownloadIgnoreQuilt" Tag="ToolDownloadIgnoreQuilt" 
                                          ToolTip="{DynamicResource LangPageSetupSystemDownloadSimplifyModLoaderDisplayToolTip}" />
                        <local:MyCheckBox Margin="0,2,0,4" Text="{DynamicResource LangPageSetupSystemDownloadSSL}" Grid.Row="12" Height="22" Grid.ColumnSpan="2"
                                          x:Name="CheckDownloadCert" Tag="ToolDownloadCert" 
                                          ToolTip="{DynamicResource LangPageSetupSystemDownloadSSLToolTip}" />
                    </Grid>
                </StackPanel>
            </local:MyCard>
            <local:MyCard Margin="0,0,0,15" Title="{DynamicResource LangPageSetupSystemDownloadAccessibility}">
                <Grid Margin="25,40,25,17">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="22" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="22" />
                    </Grid.RowDefinitions>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Text="{DynamicResource LangPageSetupSystemDownloadAccessibilityRemindGameUpdate}" Margin="0,0,25,0" />
                    <local:MyCheckBox Text="{DynamicResource LangPageSetupSystemDownloadAccessibilityRemindGameUpdateRelease}" Grid.Column="1" x:Name="CheckUpdateRelease" Tag="ToolUpdateRelease" ToolTip="{DynamicResource LangPageSetupSystemDownloadAccessibilityRemindGameUpdateReleaseToolTip}" />
                    <local:MyCheckBox Text="{DynamicResource LangPageSetupSystemDownloadAccessibilityRemindGameUpdateBeta}" Grid.Column="2" Height="22" x:Name="CheckUpdateSnapshot" Tag="ToolUpdateSnapshot" ToolTip="{DynamicResource LangPageSetupSystemDownloadAccessibilityRemindGameUpdateBetaToolTip}" />
                    <TextBlock VerticalAlignment="Center" Grid.Row="2" HorizontalAlignment="Left" Text="{DynamicResource LangPageSetupSystemDownloadAccessibilitySetGameLanguage}" Margin="0,0,25,0" />
                    <local:MyCheckBox Text="{DynamicResource LangPageSetupSystemDownloadAccessibilitySetGameLanguageToChinese}" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="5" x:Name="CheckHelpChinese" Tag="ToolHelpChinese" />
                </Grid>
            </local:MyCard>
            <local:MyCard Margin="0,0,0,15" Title="{DynamicResource LangPageSetupSystemSystem}">
                <Grid Margin="25,40,25,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" SharedSizeGroup="Name" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="28" />
                        <RowDefinition Height="9" />
                        <RowDefinition Height="28" />
                        <RowDefinition Height="9" />
                        <RowDefinition Height="28" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Text="{DynamicResource LangPageSetupSystemSystemLaunchUpdate}" Margin="0,0,25,0" />
                    <local:MyComboBox x:Name="ComboSystemUpdate" Tag="SystemSystemUpdate" Grid.Column="1">
                        <local:MyComboBoxItem Content="{DynamicResource LangPageSetupSystemSystemLaunchUpdateA}" x:Name="ItemSystemUpdateDownload" />
                        <local:MyComboBoxItem Content="{DynamicResource LangPageSetupSystemSystemLaunchUpdateB}" />
                        <local:MyComboBoxItem Content="{DynamicResource LangPageSetupSystemSystemLaunchUpdateC}" />
                        <local:MyComboBoxItem Content="{DynamicResource LangPageSetupSystemSystemLaunchUpdateD}" />
                    </local:MyComboBox>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Text="{DynamicResource LangPageSetupSystemSystemLaunchAnnouncement}" Margin="0,0,25,0" Grid.Row="2" />
                    <local:MyComboBox x:Name="ComboSystemActivity" Tag="SystemSystemActivity" Grid.Column="1" Grid.Row="2">
                        <local:MyComboBoxItem Content="{DynamicResource LangPageSetupSystemSystemLaunchAnnouncementA}" ToolTip="{DynamicResource LangPageSetupSystemSystemLaunchAnnouncementAToolTip}" />
                        <local:MyComboBoxItem Content="{DynamicResource LangPageSetupSystemSystemLaunchAnnouncementB}" />
                        <local:MyComboBoxItem Content="{DynamicResource LangPageSetupSystemSystemLaunchAnnouncementC}" />
                    </local:MyComboBox>
                    <TextBlock Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Left" Text="{DynamicResource LangPageSetupSystemSystemCacheFolder}" Margin="0,0,25,0" />
                    <local:MyTextBox x:Name="TextSystemCache" Grid.Row="4" Grid.ColumnSpan="2" Tag="SystemSystemCache" Grid.Column="1" ToolTip="{DynamicResource LangPageSetupSystemSystemCacheFolderToolTip}" HintText="{DynamicResource LangSetDefault}">
                        <local:MyTextBox.ValidateRules>
                            <local:ValidateNullable />
                            <local:ValidateFolderPath UseMinecraftCharCheck="False" />
                        </local:MyTextBox.ValidateRules>
                    </local:MyTextBox>
                    <Grid Height="35" Grid.Row="6" Grid.ColumnSpan="5" Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Button" />
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Button" />
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Button" />
                        </Grid.ColumnDefinitions>
                        <local:MyButton Grid.Column="0" x:Name="BtnSystemUpdate" MinWidth="140" Text="{DynamicResource LangPageSetupSystemSystemCheckUpdate}" Padding="13,0" Margin="0,0,20,0" />
                        <local:MyButton Grid.Column="1" x:Name="BtnSystemSettingExp" MinWidth="140" Text="{DynamicResource LangPageSetupSystemExportSettings}" Padding="13,0" Margin="0,0,20,0" />
                        <local:MyButton Grid.Column="2" x:Name="BtnSystemSettingImp" MinWidth="140" Text="{DynamicResource LangPageSetupSystemImportSettings}" Padding="13,0" Margin="0,0,20,0" />
                    </Grid>
                    <Grid Height="35" Grid.Row="7" Grid.ColumnSpan="5" Margin="0,12,0,0" x:Name="PanDonate">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Button" />
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Button" />
                        </Grid.ColumnDefinitions>
                        <local:MyButton Grid.Column="0" x:Name="BtnSystemIdentify" MinWidth="140" Text="{DynamicResource LangPageOtherAboutSponsorsCopyUUID}" Padding="13,0" Margin="0,0,20,0" />
                        <local:MyButton Grid.Column="1" x:Name="BtnSystemUnlock" MinWidth="140" Text="{DynamicResource LangPageOtherAboutSponsorsSetUnlockCode}" Padding="13,0" Margin="0,0,20,0" />
                    </Grid>
                </Grid>
            </local:MyCard>

            <local:MyCard Margin="0,0,0,15" Title="{DynamicResource LangPageSetupSystemLang}">
                <Grid Margin="25,40,25,20" Visibility="Visible">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" SharedSizeGroup="Name" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="28" />
                        <RowDefinition Height="9" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="9" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Text="{DynamicResource LangPageSetupSystemLangLaunchLang}"/>
                    <local:MyComboBox x:Name="ComboBackgroundSuit" Tag="UiBackgroundSuit" Grid.Row="0" Grid.Column="1">
                        <local:MyComboBoxItem Content="English (US)" Tag="en_US" FontFamily="Resources/#PCL English"/>
                        <local:MyComboBoxItem Content="English (UK)" Tag="en_GB" FontFamily="Resources/#PCL English"/>
                        <local:MyComboBoxItem Content="简体中文 (中国大陆)" Tag="zh_CN" IsSelected="True" FontFamily="Resources/#PCL English, Microsoft YaHei UI"/>
                        <local:MyComboBoxItem Content="繁體中文 (香港特別行政區)" Tag="zh_HK" FontFamily="Resources/#PCL English, Microsoft JhengHei UI"/>
                        <local:MyComboBoxItem Content="繁體中文 (台灣)" Tag="zh_TW" FontFamily="Resources/#PCL English, Microsoft JhengHei UI"/>
                        <local:MyComboBoxItem Content="文言 (華夏)" Tag="lzh" FontFamily="Resources/#PCL English, Microsoft JhengHei UI"/>
                        <local:MyComboBoxItem Content="梗体中文 (天朝)" Tag="zh_MEME" FontFamily="Resources/#PCL English, Microsoft YaHei UI"/>
                    </local:MyComboBox>
                    <local:MyHint Text="{DynamicResource LangPageSetupSystemLangWarn}" Grid.Row="2" Grid.ColumnSpan="2"/>
                    <Grid Height="35" Grid.Row="4" Grid.ColumnSpan="5" Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Button" />
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Button" />
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Button" />
                        </Grid.ColumnDefinitions>
                        <local:MyButton Grid.Column="0" x:Name="BtnHelpTranslate" MinWidth="140" Text="{DynamicResource LangPageSetupSystemLangHelpTranslate}" Padding="13,0" Margin="0,0,20,0" />
                    </Grid>
                </Grid>
            </local:MyCard>
            <local:MyCard x:Name="CardDebug" Margin="0,0,0,15" Title="{DynamicResource LangPageSetupSystemDebug}" CanSwap="True" IsSwaped="True">
                <StackPanel Margin="25,40,25,15">
                    <Grid x:Name="PanDebugAnim" Height="22" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Name" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Text="{DynamicResource LangPageSetupSystemDebugAnimSpeed}" Margin="0,0,25,0" />
                        <local:MySlider x:Name="SliderDebugAnim" Tag="SystemDebugAnim" MaxValue="30" Grid.Column="1" />
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.5*" />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <local:MyCheckBox Grid.Column="0" Text="{DynamicResource LangPageSetupSystemDebugNotCopyExistFileWhenDownload}" Height="22" x:Name="CheckDebugSkipCopy" Tag="SystemDebugSkipCopy" ToolTip="{DynamicResource LangPageSetupSystemDebugNotCopyExistFileWhenDownloadToolTip}" />
                        <local:MyCheckBox Grid.Column="1" Text="{DynamicResource LangPageSetupSystemDebugDebugMode}" Height="22" x:Name="CheckDebugMode" Tag="SystemDebugMode" ToolTip="{DynamicResource LangPageSetupSystemDebugDebugModeToolTip}" />
                        <local:MyCheckBox Grid.Column="2" Text="{DynamicResource LangPageSetupSystemDebugDelay}" Height="22" x:Name="CheckDebugDelay" Tag="SystemDebugDelay" ToolTip="{DynamicResource LangPageSetupSystemDebugDelayToolTip}" />
                    </Grid>
                </StackPanel>
            </local:MyCard>
        </StackPanel>
    </local:MyScrollViewer>
</local:MyPageRight>