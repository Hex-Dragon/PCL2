<Grid x:Class="PageLoginLegacy" Tag="True"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PCL"
      mc:Ignorable="d" d:DesignWidth="297.6">
    <StackPanel Margin="0,0,0,5">
        <local:MyHint x:Name="HintChinese" Theme="Red" Text="{StaticResource LangPageLoginLegacySpecialCharacters}" Margin="0,0,0,15" Visibility="Collapsed" />
        <local:MySkin HorizontalAlignment="Center" x:Name="Skin" HasCape="False" Margin="0,0,0,15" />
        <local:MyComboBox IsEditable="True" x:Name="ComboName" Height="28" IsTextSearchEnabled="False" HintText="{StaticResource LangPageLoginLegacyID}" />
    </StackPanel>
</Grid>
